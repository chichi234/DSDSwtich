<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/title_padding"
        android:paddingStart="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/appName"/>

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="@android:color/white"
            android:text="@string/scanner_action_scan"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_padding"
        android:layout_marginTop="@dimen/title_padding"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="@dimen/title_padding"
        android:layout_marginStart="@dimen/title_padding"
        android:text="@string/my_devices"/>

    <TextView
        android:id="@+id/noDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/title_padding"
        android:text="There is no my device. \nplease pair and add to my device"/>

    <ListView
        android:id="@+id/my_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_padding"
        android:layout_marginStart="@dimen/title_padding"
        android:descendantFocusability="afterDescendants"
        android:cacheColorHint="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_padding"
        android:layout_marginLeft="@dimen/title_padding"
        android:layout_marginStart="@dimen/title_padding"
        android:layout_marginTop="@dimen/title_padding"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/colorPrimary"
        android:text="@string/available_devices"/>

    <ListView
        android:id="@+id/available_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_padding"
        android:layout_marginStart="@dimen/title_padding"
        android:descendantFocusability="afterDescendants"
        android:cacheColorHint="@android:color/transparent"/>


</LinearLayout>